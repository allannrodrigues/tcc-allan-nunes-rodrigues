@model Shop.ViewModels.Checkout.CheckoutViewModel

<div class="container" data-Pagina="Checkout">

    <form asp-controller="Checkout" asp-action="Index" asp-antiforgery="true" method="post">
        <input asp-for="IdCarrinho" type="hidden" />
        <input asp-for="QuantidadeMaximaParcelamento" type="hidden" />
        <input asp-for="ValorTotal" type="hidden" />
        <input asp-for="Pagamento.IdSessao" type="hidden" />
        <input asp-for="Pagamento.Hash" type="hidden" />
        <input asp-for="Pagamento.CardToken" type="hidden" />
        <div class="form-group">
            <label asp-for="ValorTotal"></label>
            <input asp-for="ValorTotal" type="text" class="form-control" disabled="disabled" value="@Model.ValorTotal?.ToString("C2")">
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.NumeroCartao"></label>
            <input asp-for="Pagamento.NumeroCartao" type="text" class="form-control" asp-mascara="CartaoCredito" value="">
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.NomeCartao"></label>
            <input asp-for="Pagamento.NomeCartao" type="text" class="form-control" value="Usuario Teste">
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.MesValidade"></label>
            <select asp-for="Pagamento.MesValidade" class="form-control">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.AnoValidade"></label>
            <select asp-for="Pagamento.AnoValidade" class="form-control">
                @for (int i = DateTime.Now.Year; i <= DateTime.Now.AddYears(10).Year; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.Cvv"></label>
            <input asp-for="Pagamento.Cvv" type="text" class="form-control" asp-mascara="CodigoCartaoCredito">
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.Bandeira"></label>
            <input asp-for="Pagamento.Bandeira" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.QuantidadeParcelas"></label>
            <select asp-for="Pagamento.QuantidadeParcelas" data-value="@Model.Pagamento.QuantidadeParcelas" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.DocumentoTitularCartao"></label>
            <input asp-for="Pagamento.DocumentoTitularCartao" type="text" class="form-control" asp-mascara="Cpf">
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.DataNascimentoTitularCartao"></label>
            <input asp-for="Pagamento.DataNascimentoTitularCartao" type="text" class="form-control" asp-mascara="Data">
        </div>
        <div class="form-group">
            <label asp-for="Pagamento.TelefoneTitularCartao"></label>
            <input asp-for="Pagamento.TelefoneTitularCartao" type="text" class="form-control" asp-mascara="DDDTelefone">
        </div>
        <button class="btn esh-basket-checkout" type="submit">COMPRAR</button>
    </form>


</div>
@section scripts{
    <environment names="Development">
        <script src="https://stc.sandbox.pagseguro.uol.com.br/pagseguro/api/v2/checkout/pagseguro.directpayment.js" type="text/javascript"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://stc.sandbox.pagseguro.uol.com.br/pagseguro/api/v2/checkout/pagseguro.directpayment.js" type="text/javascript"></script>
    </environment>
}
