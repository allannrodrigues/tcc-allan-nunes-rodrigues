@model List<ProdutoSkuEstoqueDataValue>

<div class="modal inmodal" data-backdrop="static" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-lg animated fadeInDown">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-database modal-icon"></i>
                <h4 class="modal-title">Histórico do Estoque</h4>
            </div>
            <div class="modal-body modal-overflow">
                <div class="row" asp-visibility="!Model.Any()">
                    <div class="col-lg-12">
                        <p class="text-muted text-center">
                            <strong>
                                <i class="fa fa-info-circle"></i> Nenhum registro encontrado!
                            </strong>
                        </p>
                    </div>
                </div>
                <div asp-visibility="Model.Any()" class="table-responsive">
                    <table class="table table-center table-striped">
                        <thead>
                            <tr>
                                <th>&nbsp;</th>
                                <th>Data</th>
                                <th>Descrição</th>
                                <th>Quantidade</th>
                                <th>Saldo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(Model.IndexOf(item) + 1)
                                    </td>
                                    <td>@item.DataCriacao.ToString("g")</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.Quantidade</td>
                                    <td>@item.Saldo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white btn-rounded" data-dismiss="modal"><i class="fa fa-close"></i> Fechar</button>
            </div>
        </div>
    </div>
</div>
